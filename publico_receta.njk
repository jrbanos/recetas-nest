{% extends "publico_base.njk" %}

{% block titulo %}Recetas | Receta{% endblock %}

{% block contenido %}

    <div class="form-row">
        <h1>{{receta.titulo}}</h1>
        <br>
    </div>
    <div class="form-row">
        <p>{{receta.comensales}} comensales</p>
    </div>
    <div class="form-row">
        <p>
            <b>Preparación: </b>{{receta.preparacion}} minutos 
            <b>Cocción: </b>{{receta.coccion}} minutos
        </p>
    </div>
    <div class="form-row">
        <div class="col-4">
            <img src="/public/uploads/{{receta.imagen}}" class="w-100">
        </div>
        <div class="col-8">
            <p><b>Ingredientes:</b></p>
            <ul>
                {% for elemento in receta.elementos %}
                    {% if elemento.ingrediente %}
                        <li>
                            <td>
                                {{ elemento.ingrediente }}: {{elemento.cantidad}} {{elemento.unidad}}
                            </td>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <p><b>Descripción:</b></p>
            <p>{{receta.descripcion}}</p>
        </div>
    </div>

{% endblock %}